<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/lobby_background"
    tools:context=".fragments.ChooseLobbyFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lobby_view"
        android:layout_width="545dp"
        android:layout_height="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stat_of_menu"
        android:layout_width="244dp"
        android:layout_height="59dp"
        android:background="@drawable/public_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-9dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/public_games"
        android:adjustViewBounds="true"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/private_games"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/public_games"
        android:layout_marginLeft="30dp" />

    <ImageButton
        android:id="@+id/new_lobby"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/private_games"
        android:layout_marginLeft="60dp" />

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>