<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_casino"
    tools:context=".fragments.GameViewFragment">

    <ImageView
        android:id="@+id/first_community_card10"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        tools:layout_editor_absoluteX="602dp"
        tools:layout_editor_absoluteY="174dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card9"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        app:layout_constraintStart_toEndOf="@+id/first_community_card8"
        tools:layout_editor_absoluteY="34dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card8"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        tools:layout_editor_absoluteX="416dp"
        tools:layout_editor_absoluteY="34dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toStartOf="@+id/second_community_card"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card11"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        tools:layout_editor_absoluteX="541dp"
        tools:layout_editor_absoluteY="174dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card7"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        app:layout_constraintStart_toEndOf="@+id/first_community_card6"
        tools:layout_editor_absoluteY="34dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card6"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="34dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card5"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        app:layout_constraintStart_toEndOf="@+id/first_community_card4"
        tools:layout_editor_absoluteY="208dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_community_card4"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="208dp">

    </ImageView>

    <ImageView
        android:id="@+id/first_hole"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="349dp">

    </ImageView>

    <ImageView
        android:id="@+id/second_community"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toStartOf="@+id/third_community_card"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/second_hole"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        app:layout_constraintStart_toEndOf="@+id/first_hole_card"
        tools:layout_editor_absoluteY="349dp">

    </ImageView>

    <ImageView
        android:id="@+id/third_community_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toStartOf="@+id/fourth_community_card"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/fourth_community_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toStartOf="@+id/fifth_community_card"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/fifth_community_card"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageButton
        android:id="@+id/exit_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/game_info_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/__help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/check_button"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/fold_button"
        android:layout_toLeftOf="@+id/fold_button"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageButton
        android:id="@+id/fold_button"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/check_button" />
    <ImageButton
        android:id="@+id/raise_button"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_above="@+id/check_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button"
        app:layout_constraintBottom_toTopOf="@+id/fold_button"
        app:layout_constraintEnd_toEndOf="parent" />
    <LinearLayout
        android:id="@+id/seekbar_with_text_layout"
        android:layout_width="40dp"
        android:layout_height="265dp"
        android:layout_above="@+id/fold_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">
        <!-- Кнопка "принять" - Картинка сообщения - текст

                       android:text="100"-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/seekbar_text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/button"
                android:text="100"
                android:textSize="10dp" />
        </FrameLayout>
        <!-- Сикбар вместе с бекнраундом -->
        <FrameLayout
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:background="@drawable/scrollbar1">
            <com.pockerstad.mainmenu.customparts.seek_bar.RaiseSeekBar
                android:id="@+id/seekbar_id"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:overScrollMode="never"
                android:progress="20"
                android:thumb="@drawable/thumb" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
